{% extends 'base.html.twig' %}

{% block title %}Email - {{ email.subject }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="mb-6">
        <a href="{{ path('app_email_index') }}" 
           class="text-blue-600 hover:text-blue-800 mb-4 inline-block">
            ‚Üê Back to Emails
        </a>
    </div>

    <div class="bg-white shadow rounded-lg p-6">
        <div class="mb-6">
            <h1 class="text-2xl font-bold text-gray-900 mb-2">{{ email.subject }}</h1>
            {% if email.gmailAccount %}
                <p class="text-gray-600">
                    <span class="font-semibold">Gmail Account:</span> 
                    <span class="inline-flex items-center">
                        <svg class="w-4 h-4 text-blue-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                            <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                        </svg>
                        {{ email.gmailAccount.email }}
                    </span>
                </p>
            {% endif %}
        </div>

        <div class="grid gap-6 md:grid-cols-2">
            <div class="space-y-4">
                <div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Email Details</h3>
                    <div class="bg-gray-50 p-4 rounded-lg space-y-3">
                        <div>
                            <span class="font-medium text-gray-700">From:</span>
                            <p class="text-gray-900">{{ email.sender }}</p>
                        </div>
                        <div>
                            <span class="font-medium text-gray-700">Received:</span>
                            <p class="text-gray-900">{{ email.receivedAt ? email.receivedAt|date('F j, Y \a\t g:i A') : 'N/A' }}</p>
                        </div>
                        {% if email.gmailId %}
                            <div>
                                <span class="font-medium text-gray-700">Gmail ID:</span>
                                <p class="text-gray-900 font-mono text-sm">{{ email.gmailId }}</p>
                            </div>
                        {% endif %}
                        {% if email.category %}
                            <div>
                                <span class="font-medium text-gray-700">Category:</span>
                                <span class="inline-block bg-blue-100 text-blue-800 text-sm font-semibold px-2 py-1 rounded">{{ email.category.name }}</span>
                            </div>
                        {% endif %}
                    </div>
                </div>

                {% if email.summary %}
                    <div>
                        <h3 class="text-lg font-semibold text-gray-900 mb-2">Summary</h3>
                        <div class="bg-blue-50 p-4 rounded-lg">
                            <p class="text-gray-700 italic">{{ email.summary }}</p>
                        </div>
                    </div>
                {% endif %}
            </div>

            {% if email.body %}
                <div>
                    <h3 class="text-lg font-semibold text-gray-900 mb-2">Email Content</h3>
                    <div class="bg-gray-50 p-4 rounded-lg">
                        <div class="whitespace-pre-wrap text-gray-700">{{ email.body }}</div>
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="flex space-x-4 mt-8">
            <form method="post" action="{{ path('app_email_delete', {'id': email.id}) }}" 
                  onsubmit="return confirm('Are you sure you want to delete this email?')" 
                  class="inline">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ email.id) }}">
                <button type="submit" 
                        class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
                    Delete Email
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
