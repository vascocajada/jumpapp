{% extends 'base.html.twig' %}

{% block title %}Email{% endblock %}

{% block body %}
    <h1>Email</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ email.id }}</td>
            </tr>
            <tr>
                <th>Subject</th>
                <td>{{ email.subject }}</td>
            </tr>
            <tr>
                <th>Sender</th>
                <td>{{ email.sender }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ email.body }}</td>
            </tr>
            <tr>
                <th>Summary</th>
                <td>{{ email.summary }}</td>
            </tr>
            <tr>
                <th>ReceivedAt</th>
                <td>{{ email.receivedAt ? email.receivedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>GmailId</th>
                <td>{{ email.gmailId }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_email_index') }}">back to list</a>

    <a href="{{ path('app_email_edit', {'id': email.id}) }}">edit</a>

    {{ include('email/_delete_form.html.twig') }}
{% endblock %}
