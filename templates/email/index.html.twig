{% extends 'base.html.twig' %}

{% block title %}Emails{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Emails</h1>
    </div>

    {% for message in app.flashes('success') %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            {{ message }}
        </div>
    {% endfor %}

    {% if emails is empty %}
        <div class="text-center py-12">
            <div class="text-gray-500 mb-4">
                <svg class="mx-auto h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
            </div>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No emails found</h3>
            <p class="text-gray-500 mb-4">No emails have been imported from Gmail yet. Emails are automatically fetched and categorized every 5 minutes.</p>
        </div>
    {% else %}
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {% for email in emails %}
                <div class="bg-white shadow rounded-lg p-6 flex flex-col justify-between">
                    <div>
                        <h3 class="text-lg font-bold text-gray-900 mb-2 truncate">{{ email.subject }}</h3>
                        <p class="text-gray-600 mb-2"><span class="font-semibold">From:</span> {{ email.sender }}</p>
                        {% if email.gmailAccount %}
                            <p class="text-gray-600 mb-2">
                                <span class="font-semibold">Account:</span> 
                                <span class="inline-flex items-center">
                                    <svg class="w-4 h-4 text-blue-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                                        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                                    </svg>
                                    {{ email.gmailAccount.email }}
                                </span>
                            </p>
                        {% endif %}
                        {% if email.summary %}
                            <p class="text-gray-500 mb-2 italic">{{ email.summary }}</p>
                        {% endif %}
                        <div class="flex flex-wrap gap-2 mb-2">
                            {% if email.category %}
                                <span class="inline-block bg-blue-100 text-blue-800 text-xs font-semibold px-2 py-1 rounded">{{ email.category.name }}</span>
                            {% endif %}
                            {% if email.gmailId %}
                                <span class="inline-block bg-gray-100 text-gray-600 text-xs px-2 py-1 rounded">Gmail ID: {{ email.gmailId|slice(0, 8) }}...</span>
                            {% endif %}
                        </div>
                    </div>
                    <div class="flex space-x-2 mt-4">
                        <a href="{{ path('app_email_show', {'id': email.id}) }}" 
                           class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium py-2 px-4 rounded text-center">
                            View
                        </a>
                        <form method="post" action="{{ path('app_email_delete', {'id': email.id}) }}" 
                              onsubmit="return confirm('Are you sure you want to delete this email?')" 
                              class="inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ email.id) }}">
                            <button type="submit" 
                                    class="bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded">
                                Delete
                            </button>
                        </form>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %}
