{% extends 'base.html.twig' %}

{% block title %}Gmail Account - {{ gmail_account.email }}{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="mb-6">
        <a href="{{ path('app_gmail_account_index') }}" 
           class="text-blue-600 hover:text-blue-800 mb-4 inline-block">
            ‚Üê Back to Gmail Accounts
        </a>
    </div>

    <div class="bg-white shadow rounded-lg p-6">
        <div class="flex items-center justify-between mb-6">
            <div class="flex items-center">
                <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center">
                    <span class="text-blue-600 font-semibold text-xl">{{ gmail_account.email|first|upper }}</span>
                </div>
                <div class="ml-4">
                    <h1 class="text-2xl font-bold text-gray-900">{{ gmail_account.email }}</h1>
                    {% if gmail_account.name %}
                        <p class="text-gray-600">{{ gmail_account.name }}</p>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-6">
            <div class="bg-gray-50 p-4 rounded-lg">
                <h3 class="text-lg font-medium text-gray-900 mb-2">Connection Details</h3>
                <p class="text-sm text-gray-600">
                    <strong>Connected since:</strong> {{ gmail_account.createdAt|date('F j, Y \a\t g:i A') }}
                </p>
            </div>

            <div class="bg-gray-50 p-4 rounded-lg">
                <h3 class="text-lg font-medium text-gray-900 mb-2">Email Statistics</h3>
                <p class="text-sm text-gray-600">
                    <strong>Total emails:</strong> {{ gmail_account.emails|length }}
                </p>
                <p class="text-sm text-gray-600 mt-2">
                    <strong>Auto-fetch:</strong> Emails are automatically fetched, categorized, and archived every 5 minutes
                </p>
            </div>
        </div>

        <div class="flex space-x-4">
            <form method="post" action="{{ path('app_gmail_account_delete', {'id': gmail_account.id}) }}" 
                  onsubmit="return confirm('Are you sure you want to remove this Gmail account? This will also remove all associated emails.')" 
                  class="inline">
                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ gmail_account.id) }}">
                <button type="submit" 
                        class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded">
                    Remove Account
                </button>
            </form>
        </div>
    </div>
</div>
{% endblock %} 