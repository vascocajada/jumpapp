{% extends 'base.html.twig' %}

{% block title %}Gmail Accounts{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-3xl font-bold text-gray-900">Gmail Accounts</h1>
        <a href="{{ path('app_gmail_account_add') }}" 
           class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            Add Gmail Account
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
            {{ message }}
        </div>
    {% endfor %}

    {% if gmail_accounts is empty %}
        <div class="text-center py-12">
            <div class="text-gray-500 mb-4">
                <svg class="mx-auto h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
            </div>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No Gmail accounts connected</h3>
            <p class="text-gray-500 mb-4">Connect your first Gmail account to start organizing emails.</p>
            <a href="{{ path('app_gmail_account_add') }}" 
               class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Connect Gmail Account
            </a>
        </div>
    {% else %}
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {% for account in gmail_accounts %}
                <div class="bg-white shadow rounded-lg p-6">
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center">
                            <div class="w-10 h-10 bg-blue-100 rounded-full flex items-center justify-center">
                                <span class="text-blue-600 font-semibold">{{ account.email|first|upper }}</span>
                            </div>
                            <div class="ml-3">
                                <h3 class="text-lg font-medium text-gray-900">{{ account.email }}</h3>
                                {% if account.name %}
                                    <p class="text-sm text-gray-500">{{ account.name }}</p>
                                {% endif %}
                            </div>
                        </div>
                    </div>
                    
                    <div class="text-sm text-gray-500 mb-4">
                        Connected since {{ account.createdAt|date('M j, Y') }}
                    </div>
                    
                    <div class="flex space-x-2">
                        <a href="{{ path('app_gmail_account_show', {'id': account.id}) }}" 
                           class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium py-2 px-4 rounded text-center">
                            View Details
                        </a>
                        <form method="post" action="{{ path('app_gmail_account_delete', {'id': account.id}) }}" 
                              onsubmit="return confirm('Are you sure you want to remove this Gmail account?')" 
                              class="inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ account.id) }}">
                            <button type="submit" 
                                    class="bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded">
                                Remove
                            </button>
                        </form>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% endif %}
</div>
{% endblock %} 