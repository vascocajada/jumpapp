{% extends 'base.html.twig' %}

{% block title %}New Category{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="mb-6">
        <a href="{{ path('app_home') }}" 
           class="text-blue-600 hover:text-blue-800 mb-4 inline-block">
            ‚Üê Back to Dashboard
        </a>
    </div>

    <div class="max-w-2xl mx-auto">
        <div class="bg-white shadow rounded-lg p-6">
            <h1 class="text-2xl font-bold text-gray-900 mb-6">Create New Category</h1>

            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
                <div>
                    {{ form_label(form.name, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    {{ form_widget(form.name) }}
                    {{ form_errors(form.name, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
                </div>

                <div>
                    {{ form_label(form.description, null, {'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-2'}}) }}
                    {{ form_widget(form.description) }}
                    {{ form_errors(form.description, {'attr': {'class': 'text-red-600 text-sm mt-1'}}) }}
                    <p class="text-sm text-gray-500 mt-1">This description will help AI categorize emails into this category.</p>
                </div>

                <div class="flex space-x-4 pt-4">
                    <button type="submit" 
                            class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                        Create Category
                    </button>
                    <a href="{{ path('app_home') }}" 
                       class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-bold py-2 px-4 rounded">
                        Cancel
                    </a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
