{% extends 'base.html.twig' %}

{% block title %}{{ category.name }} - Emails{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <div class="mb-6">
        <a href="{{ path('app_home') }}" 
           class="text-blue-600 hover:text-blue-800 mb-4 inline-block">
            ‚Üê Back to Dashboard
        </a>
    </div>

    <div class="flex justify-between items-center mb-6">
        <div>
            <h1 class="text-3xl font-bold text-gray-900">{{ category.name }}</h1>
            <p class="text-gray-600 mt-2">{{ category.description }}</p>
        </div>
        <div class="flex space-x-2">
            <button id="selectAllBtn" class="bg-gray-600 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded">
                Select All
            </button>
            <button id="bulkDeleteBtn" class="bg-red-600 hover:bg-red-700 text-white font-bold py-2 px-4 rounded hidden">
                Delete Selected
            </button>
            <button id="bulkUnsubscribeBtn" class="bg-yellow-500 hover:bg-yellow-600 text-white font-bold py-2 px-4 rounded hidden">
                Unsubscribe Selected
            </button>
            <a href="{{ path('app_category_edit', {'id': category.id}) }}" 
               class="bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Edit Category
            </a>
        </div>
    </div>

    {% if emails is empty %}
        <div class="text-center py-12">
            <div class="text-gray-500 mb-4">
                <svg class="mx-auto h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
            </div>
            <h3 class="text-lg font-medium text-gray-900 mb-2">No emails in this category</h3>
            <p class="text-gray-500 mb-4">Emails categorized as "{{ category.name }}" will appear here.</p>
        </div>
    {% else %}
        <form id="bulkDeleteForm" method="post" action="{{ path('app_email_bulk_delete') }}" class="hidden">
            <input type="hidden" name="_token" value="{{ csrf_token('bulk_delete') }}">
            <input type="hidden" name="category_id" value="{{ category.id }}">
            <div id="emailIdsContainer"></div>
        </form>
        <form id="bulkUnsubscribeForm" method="post" action="{{ path('app_email_bulk_unsubscribe') }}" class="hidden">
            <input type="hidden" name="_token" value="{{ csrf_token('bulk_unsubscribe') }}">
            <input type="hidden" name="category_id" value="{{ category.id }}">
            <div id="unsubscribeEmailIdsContainer"></div>
        </form>
        
        <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
            {% for email in emails %}
                <div class="bg-white shadow rounded-lg p-6 flex flex-col justify-between relative">
                    <div class="absolute top-4 right-4">
                        <input type="checkbox" name="email_ids[]" value="{{ email.id }}" 
                               class="email-checkbox w-4 h-4 text-blue-600 bg-gray-100 border-gray-300 rounded focus:ring-blue-500 focus:ring-2">
                    </div>
                    <div>
                        <h3 class="text-lg font-bold text-gray-900 mb-2 truncate">{{ email.subject }}</h3>
                        <p class="text-gray-600 mb-2"><span class="font-semibold">From:</span> {{ email.sender }}</p>
                        {% if email.gmailAccount %}
                            <p class="text-gray-600 mb-2">
                                <span class="font-semibold">Account:</span> 
                                <span class="inline-flex items-center">
                                    <svg class="w-4 h-4 text-blue-500 mr-1" fill="currentColor" viewBox="0 0 20 20">
                                        <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                                        <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                                    </svg>
                                    {{ email.gmailAccount.email }}
                                </span>
                            </p>
                        {% endif %}
                        {% if email.summary %}
                            <p class="text-gray-500 mb-2 italic overflow-x-auto max-w-full break-words whitespace-pre-wrap">{{ email.summary }}</p>
                        {% endif %}
                        <div class="flex flex-wrap gap-2 mb-2">
                            {% if email.gmailId %}
                                <span class="inline-block bg-gray-100 text-gray-600 text-xs px-2 py-1 rounded">Gmail ID: {{ email.gmailId|slice(0, 8) }}...</span>
                            {% endif %}
                            {% if email.unsubscribeStatus %}
                                {% set statusColor = {
                                    'pending': 'bg-yellow-100 text-yellow-800',
                                    'in_progress': 'bg-blue-100 text-blue-800',
                                    'success': 'bg-green-100 text-green-800',
                                    'error': 'bg-red-100 text-red-800',
                                    'inconclusive': 'bg-yellow-200 text-yellow-900'
                                }[email.unsubscribeStatus]|default('bg-gray-100 text-gray-600') %}
                                <span class="inline-block {{ statusColor }} text-xs px-2 py-1 rounded">
                                    Unsubscribe: {{ email.unsubscribeStatus|replace({'_': ' '})|capitalize }}
                                </span>
                            {% endif %}
                        </div>
                        <p class="text-xs text-gray-400">{{ email.receivedAt|date('M j, Y g:i A') }}</p>
                    </div>
                    <div class="flex space-x-2 mt-4">
                        <a href="{{ path('app_email_show', {'id': email.id}) }}" 
                           class="flex-1 bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium py-2 px-4 rounded text-center">
                            View
                        </a>
                        <form method="post" action="{{ path('app_email_delete', {'id': email.id}) }}" 
                              onsubmit="return confirm('Are you sure you want to delete this email?')" 
                              class="inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ email.id) }}">
                            <button type="submit" 
                                    class="bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded">
                                Delete
                            </button>
                        </form>
                        <form method="post" action="{{ path('app_email_unsubscribe', {'id': email.id}) }}" class="inline">
                            <input type="hidden" name="_token" value="{{ csrf_token('unsubscribe' ~ email.id) }}">
                            <button type="submit" class="bg-yellow-500 hover:bg-yellow-600 text-white font-medium py-2 px-4 rounded">
                                Unsubscribe
                            </button>
                        </form>
                    </div>
                </div>
            {% endfor %}
        </div>
        
        {% if totalPages > 1 %}
            <div class="mt-8 flex justify-center">
                <nav class="flex items-center space-x-2">
                    {% if currentPage > 1 %}
                        <a href="{{ path('app_category_show', {'id': category.id, 'page': currentPage - 1}) }}" 
                           class="px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
                            Previous
                        </a>
                    {% endif %}
                    
                    {% for page in 1..totalPages %}
                        {% if page == currentPage %}
                            <span class="px-3 py-2 text-sm font-medium text-white bg-blue-600 border border-blue-600 rounded-md">
                                {{ page }}
                            </span>
                        {% elseif page <= 3 or page > totalPages - 3 or (page >= currentPage - 1 and page <= currentPage + 1) %}
                            <a href="{{ path('app_category_show', {'id': category.id, 'page': page}) }}" 
                               class="px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
                                {{ page }}
                            </a>
                        {% elseif page == 4 and currentPage > 6 %}
                            <span class="px-3 py-2 text-sm font-medium text-gray-500">...</span>
                        {% elseif page == totalPages - 3 and currentPage < totalPages - 5 %}
                            <span class="px-3 py-2 text-sm font-medium text-gray-500">...</span>
                        {% endif %}
                    {% endfor %}
                    
                    {% if currentPage < totalPages %}
                        <a href="{{ path('app_category_show', {'id': category.id, 'page': currentPage + 1}) }}" 
                           class="px-3 py-2 text-sm font-medium text-gray-500 bg-white border border-gray-300 rounded-md hover:bg-gray-50">
                            Next
                        </a>
                    {% endif %}
                </nav>
            </div>
            
            <div class="mt-4 text-center text-sm text-gray-500">
                Showing {{ ((currentPage - 1) * 20) + 1 }} to {{ min(currentPage * 20, totalEmails) }} of {{ totalEmails }} emails
            </div>
        {% endif %}
    {% endif %}
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const selectAllBtn = document.getElementById('selectAllBtn');
    const bulkDeleteBtn = document.getElementById('bulkDeleteBtn');
    const bulkUnsubscribeBtn = document.getElementById('bulkUnsubscribeBtn');
    const bulkDeleteForm = document.getElementById('bulkDeleteForm');
    const bulkUnsubscribeForm = document.getElementById('bulkUnsubscribeForm');
    const emailCheckboxes = document.querySelectorAll('.email-checkbox');
    const emailIdsContainer = document.getElementById('emailIdsContainer');
    const unsubscribeEmailIdsContainer = document.getElementById('unsubscribeEmailIdsContainer');
    
    let allSelected = false;
    
    // Select All functionality
    selectAllBtn.addEventListener('click', function() {
        allSelected = !allSelected;
        emailCheckboxes.forEach(checkbox => {
            checkbox.checked = allSelected;
        });
        updateBulkDeleteButton();
        selectAllBtn.textContent = allSelected ? 'Deselect All' : 'Select All';
    });
    
    // Individual checkbox functionality
    emailCheckboxes.forEach(checkbox => {
        checkbox.addEventListener('change', function() {
            updateBulkDeleteButton();
            updateSelectAllButton();
        });
    });
    
    // Bulk Delete functionality
    bulkDeleteBtn.addEventListener('click', function() {
        const selectedEmails = document.querySelectorAll('.email-checkbox:checked');
        if (selectedEmails.length === 0) {
            alert('Please select at least one email to delete.');
            return;
        }
        
        if (confirm(`Are you sure you want to delete ${selectedEmails.length} email(s)?`)) {
            // Add selected email IDs to the form
            emailIdsContainer.innerHTML = '';
            selectedEmails.forEach(checkbox => {
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'email_ids[]';
                input.value = checkbox.value;
                emailIdsContainer.appendChild(input);
            });
            
            bulkDeleteForm.submit();
        }
    });
    
    // Bulk Unsubscribe functionality
    bulkUnsubscribeBtn.addEventListener('click', function() {
        const selectedEmails = document.querySelectorAll('.email-checkbox:checked');
        if (selectedEmails.length === 0) {
            alert('Please select at least one email to unsubscribe.');
            return;
        }
        if (confirm(`Are you sure you want to unsubscribe from ${selectedEmails.length} email(s)?`)) {
            // Add selected email IDs to the form
            unsubscribeEmailIdsContainer.innerHTML = '';
            selectedEmails.forEach(checkbox => {
                const input = document.createElement('input');
                input.type = 'hidden';
                input.name = 'email_ids[]';
                input.value = checkbox.value;
                unsubscribeEmailIdsContainer.appendChild(input);
            });
            bulkUnsubscribeForm.submit();
        }
    });
    
    function updateBulkDeleteButton() {
        const selectedCount = document.querySelectorAll('.email-checkbox:checked').length;
        if (selectedCount > 0) {
            bulkDeleteBtn.classList.remove('hidden');
            bulkDeleteBtn.textContent = `Delete Selected (${selectedCount})`;
            bulkUnsubscribeBtn.classList.remove('hidden');
            bulkUnsubscribeBtn.textContent = `Unsubscribe Selected (${selectedCount})`;
        } else {
            bulkDeleteBtn.classList.add('hidden');
            bulkUnsubscribeBtn.classList.add('hidden');
        }
    }
    
    function updateSelectAllButton() {
        const checkedCount = document.querySelectorAll('.email-checkbox:checked').length;
        const totalCount = emailCheckboxes.length;
        
        if (checkedCount === 0) {
            allSelected = false;
            selectAllBtn.textContent = 'Select All';
        } else if (checkedCount === totalCount) {
            allSelected = true;
            selectAllBtn.textContent = 'Deselect All';
        } else {
            allSelected = false;
            selectAllBtn.textContent = 'Select All';
        }
    }
});
</script>
{% endblock %}
